@page "{id:int}"
@model MyApp.Namespace.DetailsModel
@{
    ViewData["Title"] = "Challenge Details";
}
<link rel="stylesheet" href="~/css/details.css">

<h2>Challenge Details</h2>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<section class="challenge-details">
    <h2>@Model.Challenge.Title</h2>
    <p>Category: @Model.Challenge.Category</p>
    <p>Difficulty: @Model.Challenge.Difficulty</p>
    <p>Period: @Model.Challenge.StartDate.ToShortDateString() - @Model.Challenge.EndDate.ToShortDateString()</p>
    <p>Instructions: @Model.Challenge.Instructions</p>
    <form method="post" asp-page-handler="SubmitScore">
        <input type="hidden" asp-for="Challenge.Id" />
        <div class="form-group">
            <label for="score">Submit Score</label>
            <input type="number" id="score" name="score" required />
            <label >
                <input type="checkbox" name="isFavorite" value="true"/> Add to Favorites 
            </label>
        </div>
        <button type="submit" class="submit-button">Submit Score</button>
    </form>
</section>

