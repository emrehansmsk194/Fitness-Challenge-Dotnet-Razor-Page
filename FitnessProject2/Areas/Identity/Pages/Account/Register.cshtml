@page
@model FitnessProject2.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="~/css/login.css">
</head>
<div class="container">
<h1>@ViewData["Title"]</h1>

<h4>Create a new account.</h4>
<div class="row">
    <div class="col-md-6">
        <section>
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" aria-required="true" autocomplete="username" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" aria-required="true" autocomplete="email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" aria-required="true" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" aria-required="true" autocomplete="new-password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" id="register">Register</button>
        </form>
        </section>
    </div>
</div>

<div id="link2">
    <a asp-page="./Login" >Already have an account? Log in.</a>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}